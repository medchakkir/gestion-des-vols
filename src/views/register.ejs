<!DOCTYPE html>
<html>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/x-icon" href="img/favicon.png" />
    <!-- Font Awesome -->
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.6.0/css/all.min.css"
    />

    <!-- CSS Styles -->
    <link rel="stylesheet" href="css/_general.css" />
    <link rel="stylesheet" href="css/register.css" />
    <title>Travel - Inscription</title>
  </head>
  <body>
    <main class="auth-section">
      <p class="back-link">
        <a href="/">
          <i class="fa-solid fa-arrow-left"></i>
          Retour
        </a>
      </p>
      <div class="auth-container">
        <div class="auth-header">
          <h3>Inscription</h3>
          <p>
            Créez un compte pour profiter de tous nos services et offres
            exclusives.
          </p>
        </div>
        <form class="auth-form">
          <div class="input-container">
            <label for="name">Nom Complet</label>
            <input
              type="text"
              name="name"
              id="name"
              placeholder="Entrez votre nom complet"
              required
            />
          </div>
          <div class="input-container">
            <label for="email">Email</label>
            <input
              type="email"
              name="email"
              id="email"
              placeholder="Entrez votre email"
              required
            />
          </div>
          <div class="input-container">
            <label for="password">Mot de Passe</label>
            <input
              type="password"
              name="password"
              id="password"
              placeholder="Entrez votre mot de passe"
              required
            />
          </div>
          <input type="submit" value="S'inscrire" class="auth-btn" />
          <p class="signup-prompt">
            Déjà un compte? <a href="/login">Se connecter</a>
          </p>
        </form>
      </div>
    </main>

    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
      document.querySelector("form").addEventListener("submit", (e) => {
        e.preventDefault();
        const formData = new FormData(e.target);
        const entries = Object.fromEntries(formData);

        fetch("/auth/register", {
          method: "POST",
          headers: {
            "Content-Type": "application/json",
          },
          body: JSON.stringify(entries),
        })
          .then((res) => res.json())
          .then((data) => {
            if (data.error) {
              Swal.fire("Erreur!", data.error, "error");
            } else {
              Swal.fire("Succès!", data.message, "success").then(() => {
                window.location.href = data.redirect;
              });
            }
          });
      });
    </script>
  </body>
</html>
